def main():
    print("Starting Code Challenge")
    print('Enter an integer number 20 or greater > 20')
    x=input()
    x=int(x)
    y=0
    
    while x > 1:
        y=y+1
        print('Your number',x, 'is a valid Integer 20 or greater.  Thanks')
        print("Starting While Loop Print Count Variable")
        print('The user input started as',x)
        x=x/2
        print('The current value of the user input after some math is',x)
        print('The while loop has looped y time')
       
   
    
    print("Ending While Loop")
    print("Ending Code Challenge")

main()
